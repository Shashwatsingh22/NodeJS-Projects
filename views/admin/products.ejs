   <body>
       <%- include('../layout/nav.ejs') %>
<h1 align="center"> Welcome to Amazon </h1>
<h4 align="center">List of Products </h4>
<main>

     <%if (prod.length>0){%>
        <div class="grid" >
        <%for (let prd of prod){%>
            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title"><%= prd.title %></h1>
                </header>
                <div>
                    <img src="<%= prd.imgurl %>" alt="<%= prd.title %>" class="imgView">
                </div>
                <div class="card__content">
                    <h2 class="product__price">$<%= prd.price %></h2>
                    <p class="product__description"><%= prd.desc %></p>
                </div>
                <div class="card__actions">
                    <a href="/admin/edit-product/<%= prd._id %>?edit=true" class="btn"> ðŸ–ŠEdit Product </a>
                </div>
              
                <form action="/admin/delete" method="POST" align="center">
                
                   <input type="hidden" value="<%= prd._id %>" name="prodID">
                   <button class="btn" type="submit"> 
                       Delete
                    </button>

                </form>
            

            </article>
        
        <%}%>
    </div>
        <%} else {%>
     <h1 align="center"> ðŸ˜’ No Products Added Yet !!</h1>
     <%}%>
</main>
